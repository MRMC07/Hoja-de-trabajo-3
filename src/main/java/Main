public class Main {
    public static void main(String[] args) throws Exception {
        
        String dataFile = (args.length >= 1) ? args[0] : "data.txt";
        int n = (args.length >= 2) ? Integer.parseInt(args[1]) : 3000;
        String csvOut = (args.length >= 3) ? args[2] : "times.csv";
        int step = (args.length >= 4) ? Integer.parseInt(args[3]) : 50;

        // 1) Generar archivo con números
        FileUtil.generateRandomNumbersFile(dataFile, n, 1_000_000, 12345L);

        // 2) Benchmark y export CSV
        Benchmark.runAll(dataFile, csvOut, step);

        System.out.println("Listo. Archivo datos: " + dataFile);
        System.out.println("CSV tiempos: " + csvOut);
        System.out.println("Abrí times.csv en Excel y hacé la gráfica.");
    }
}
